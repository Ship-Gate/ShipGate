{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["CI", "NODE_ENV"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "build:production": {
      "dependsOn": ["^build:production"],
      "outputs": ["dist/**"],
      "env": ["NODE_ENV"]
    },
    "test": {
      "dependsOn": ["build"],
      "cache": false
    },
    "test:critical": {
      "dependsOn": ["build"],
      "cache": false,
      "env": ["CI"]
    },
    "test:perf": {
      "dependsOn": ["build"],
      "cache": false,
      "env": ["CI", "PERF_BUDGET"]
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "typecheck": {
      "dependsOn": ["^build"]
    },
    "typecheck:production": {
      "dependsOn": ["^typecheck:production"]
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
