// Shipgate ISL Verify â€” Jenkins Pipeline
//
// Usage: Copy this into your Jenkinsfile or use as a shared library

pipeline {
  agent {
    docker { 
      image 'ghcr.io/shipgate/shipgate:v1'
    }
  }
  
  stages {
    stage('Shipgate Verify') {
      steps {
        sh '''
          shipgate verify src/ --ci --format junit > shipgate-report.xml || true
        '''
      }
      post {
        always {
          junit 'shipgate-report.xml'
        }
      }
    }
  }
  
  post {
    always {
      archiveArtifacts artifacts: 'shipgate-report.xml', allowEmptyArchive: true
    }
  }
}
