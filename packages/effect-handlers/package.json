{
  "name": "@isl-lang/effect-handlers",
  "version": "1.0.0",
  "description": "ISL Algebraic Effects and Handlers - First-class effect system for controlled side effects",
  "license": "MIT",
  "author": "mevla",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mevla/isl-lang.git"
  },
  "keywords": [
    "intentos",
    "isl",
    "effects",
    "algebraic-effects",
    "effect-handlers",
    "functional-programming",
    "side-effects",
    "continuations"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./builtins": {
      "import": "./dist/builtins.js",
      "require": "./dist/builtins.cjs"
    },
    "./combinators": {
      "import": "./dist/combinators.js",
      "require": "./dist/combinators.cjs"
    }
  },
  "files": [
    "dist",
    "intents"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.2",
    "vitest": "^1.0.4"
  },
  "engines": {
    "node": ">=18"
  },
  "homepage": "https://intentlang.dev",
  "bugs": {
    "url": "https://github.com/mevla/isl-lang/issues"
  }
}
