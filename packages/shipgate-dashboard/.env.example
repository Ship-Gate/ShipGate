# PostgreSQL
DATABASE_URL=postgresql://user@localhost:5432/shipgate?schema=public

# OAuth - GitHub (create at https://github.com/settings/developers)
# Used for both login and GitHub integration (repo/PR/commit access)
# Callback URLs: /api/auth/github/callback (login), /api/integrations/github/callback (integration)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# OAuth - Google (create at https://console.cloud.google.com/apis/credentials)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Optional: base URL for OAuth callbacks (defaults to request origin)
# NEXTAUTH_URL=http://localhost:3001

# Stripe (create at https://dashboard.stripe.com)
STRIPE_SECRET_KEY=
STRIPE_PRO_PRICE_ID=    # Price ID for Pro subscription (e.g. price_xxx)
STRIPE_WEBHOOK_SECRET=  # Webhook signing secret (e.g. whsec_xxx)

# Slack App (create at https://api.slack.com/apps)
SLACK_CLIENT_ID=
SLACK_CLIENT_SECRET=
SLACK_SIGNING_SECRET=

# Encryption key for stored OAuth tokens (generate: openssl rand -hex 32)
TOKEN_ENCRYPTION_KEY=

# Vibe Pipeline (dashboard /dashboard/vibe) - one of:
# ANTHROPIC_API_KEY=  # https://console.anthropic.com
# OPENAI_API_KEY=    # https://platform.openai.com/api-keys
