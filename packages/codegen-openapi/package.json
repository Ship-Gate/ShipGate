{
  "name": "@isl-lang/codegen-openapi",
  "version": "0.1.0",
  "description": "Generate OpenAPI 3.1 specifications from ISL domains",
  "author": "ISL Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/isl-lang/isl.git",
    "directory": "packages/codegen-openapi"
  },
  "homepage": "https://isl-lang.dev/docs/codegen-openapi",
  "bugs": {
    "url": "https://github.com/isl-lang/isl/issues"
  },
  "keywords": [
    "isl",
    "codegen",
    "openapi",
    "swagger",
    "code-generation",
    "api"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "validate": "openapi-generator-cli validate -i test-output/openapi.yaml",
    "prepublishOnly": "pnpm run build && pnpm run test"
  },
  "dependencies": {
    "@isl-lang/parser": "workspace:*",
    "@isl-lang/typechecker": "workspace:*",
    "yaml": "^2.3.0"
  },
  "devDependencies": {
    "@apidevtools/swagger-parser": "^10.1.0",
    "@types/node": "^20.10.0",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
