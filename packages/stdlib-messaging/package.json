{
  "name": "@isl-lang/stdlib-messaging",
  "version": "1.0.0",
  "description": "ISL Standard Library - Messaging (queues, events, pub/sub)",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./intents/*": "./intents/*"
  },
  "files": [
    "dist",
    "intents"
  ],
  "scripts": {
    "build": "tsup implementations/typescript/index.ts --format esm --dts --clean --outDir dist",
    "dev": "tsup implementations/typescript/index.ts --format esm --dts --watch --outDir dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@isl-lang/isl-core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^25.1.0",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "keywords": [
    "isl",
    "messaging",
    "queue",
    "pubsub",
    "events"
  ],
  "author": "mevla",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mevla/isl-lang.git"
  },
  "homepage": "https://intentlang.dev",
  "bugs": {
    "url": "https://github.com/mevla/isl-lang/issues"
  }
}
