{
  "name": "@isl-lang/pbt",
  "version": "0.1.0",
  "description": "Property-Based Testing for ISL - Generate random inputs satisfying preconditions and verify postconditions",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@isl-lang/parser": "workspace:*",
    "@isl-lang/verifier-runtime": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^25.1.0",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "author": "mevla",
  "license": "MIT"
}
