{
  "name": "@isl-lang/pbt",
  "version": "1.0.0",
  "description": "Property-Based Testing for ISL - Generate random inputs satisfying preconditions and verify postconditions",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./cli": {
      "types": "./dist/cli.d.ts",
      "import": "./dist/cli.js"
    },
    "./package.json": "./package.json"
  },
  "bin": {
    "isl-pbt": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup --config false src/index.ts src/cli.ts --format esm --clean --sourcemap --dts --external @isl-lang/parser --external @isl-lang/verifier-runtime",
    "dev": "tsup --watch",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "test:unit": "vitest run --passWithNoTests"
  },
  "dependencies": {
    "@isl-lang/parser": "workspace:*",
    "@isl-lang/verifier-runtime": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^25.1.0",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "author": "mevla",
  "license": "MIT",
  "sideEffects": false
}
