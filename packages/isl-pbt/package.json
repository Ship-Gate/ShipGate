{
  "name": "@isl-lang/pbt",
  "version": "1.0.0",
  "description": "Property-Based Testing for ISL - Generate random inputs satisfying preconditions and verify postconditions",
  "type": "module",
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js"
    },
    "./cli": {
      "import": "./dist/cli.js"
    }
  },
  "bin": {
    "isl-pbt": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup --config false src/index.ts src/cli.ts --format esm --clean --sourcemap --no-dts --external @isl-lang/parser --external @isl-lang/verifier-runtime",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@isl-lang/parser": "workspace:*",
    "@isl-lang/verifier-runtime": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^25.1.0",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "author": "mevla",
  "license": "MIT"
}
