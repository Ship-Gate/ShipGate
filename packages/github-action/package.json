{
  "name": "@isl-lang/github-action",
  "version": "0.1.0",
  "description": "GitHub Action for ISL verification in CI/CD",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "package": "npm run build"
  },
  "dependencies": {
    "@actions/artifact": "^2.1.0",
    "@actions/cache": "^3.2.0",
    "@actions/core": "^1.10.0",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.0",
    "@actions/glob": "^0.4.0",
    "@actions/io": "^1.1.3",
    "@isl-lang/isl-cli": "workspace:*",
    "@isl-lang/isl-verify": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vercel/ncc": "^0.38.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "files": [
    "dist",
    "action.yml"
  ],
  "keywords": [
    "isl",
    "github-action",
    "verification",
    "ci-cd",
    "testing"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mevla/isl-lang.git"
  },
