{
  "name": "@isl-lang/codegen-terraform",
  "version": "0.1.0",
  "description": "Generate Terraform/OpenTofu infrastructure from ISL domain specifications",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "lint": "eslint src/**/*.ts",
    "clean": "rimraf dist",
    "validate": "terraform fmt -check -recursive",
    "typecheck": "tsc --noEmit",
    "test:unit": "vitest run --passWithNoTests"
  },
  "keywords": [
    "isl",
    "terraform",
    "opentofu",
    "infrastructure-as-code",
    "aws",
    "gcp",
    "azure",
    "codegen"
  ],
  "author": "mevla",
  "license": "MIT",
  "dependencies": {
    "@isl-lang/isl-core": "workspace:*",
    "@isl-lang/parser": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "rimraf": "^5.0.0",
    "tsup": "^8.0.1"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guardiavault-oss/ISL-LANG.git"
  },
  "homepage": "https://intentlang.dev",
  "bugs": {
    "url": "https://github.com/guardiavault-oss/ISL-LANG/issues"
  },
  "private": true,
  "experimental": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "sideEffects": false,
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}
