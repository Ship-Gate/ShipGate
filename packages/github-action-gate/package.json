{
  "name": "@isl-lang/github-action-gate",
  "version": "0.1.0",
  "description": "ISL Studio Gate - GitHub Action to block unsafe PRs",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/isl-lang/gate-action"
  },
  "keywords": [
    "github-action",
    "security",
    "gate",
    "isl",
    "verification"
  ],
  "author": "ISL Team",
  "license": "MIT",
  "experimental": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist",
    "action.yml",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --clean --external @actions/core --external @actions/github --external @isl-lang/gate",
    "test": "vitest run --passWithNoTests",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "test:unit": "vitest run --passWithNoTests",
    "package": "npm run build && npm pack",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@isl-lang/gate": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "tsup": "^8.0.1",
    "rimraf": "^5.0.5"
  }
}
