{
  "name": "@isl-lang/stdlib-core",
  "version": "0.1.0",
  "description": "ISL Standard Library - Core types and validations for Intent Specification Language",
  "license": "MIT",
  "author": "mevla",
  "homepage": "https://intentlang.dev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guardiavault-oss/ISL-LANG.git"
  },
  "keywords": [
    "isl",
    "intent-specification-language",
    "stdlib",
    "validation",
    "types",
    "branded-types",
    "email",
    "phone",
    "uuid",
    "ulid",
    "money",
    "coordinates"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./primitives": {
      "types": "./dist/primitives.d.ts",
      "import": "./dist/primitives.js",
      "require": "./dist/primitives.cjs"
    },
    "./validation": {
      "types": "./dist/validation.d.ts",
      "import": "./dist/validation.js",
      "require": "./dist/validation.cjs"
    },
    "./time": {
      "types": "./dist/time.d.ts",
      "import": "./dist/time.js",
      "require": "./dist/time.cjs"
    },
    "./geo": {
      "types": "./dist/geo.d.ts",
      "import": "./dist/geo.js",
      "require": "./dist/geo.cjs"
    },
    "./ids": {
      "types": "./dist/ids.d.ts",
      "import": "./dist/ids.js",
      "require": "./dist/ids.cjs"
    }
  },
  "files": [
    "dist",
    "intents",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/guardiavault-oss/ISL-LANG/issues"
  }
}
