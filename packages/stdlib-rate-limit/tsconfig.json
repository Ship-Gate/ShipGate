{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./implementations/typescript",
    "lib": ["ES2022"]
  },
  "include": ["implementations/typescript/**/*"],
  "exclude": ["node_modules", "dist", "tests"]
}
