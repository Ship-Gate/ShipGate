{
  "name": "@isl-lang/snapshot-testing",
  "version": "0.1.0",
  "description": "Snapshot testing for ISL specifications and generated outputs",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./vitest": {
      "types": "./dist/vitest.d.ts",
      "import": "./dist/vitest.js"
    },
    "./jest": {
      "types": "./dist/jest.d.ts",
      "import": "./dist/jest.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/vitest.ts src/jest.ts --format esm --dts --clean",
    "dev": "tsup src/index.ts src/vitest.ts src/jest.ts --format esm --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:update": "vitest run -u",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "diff": "^5.1.0",
    "fast-deep-equal": "^3.1.3",
    "pretty-format": "^29.7.0"
  },
  "devDependencies": {
    "@types/diff": "^5.0.9",
    "@types/node": "^25.1.0",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "peerDependencies": {
    "vitest": "^1.0.0"
  },
  "peerDependenciesMeta": {
    "vitest": {
      "optional": true
    }
  },
  "keywords": [
    "isl",
    "snapshot",
    "testing",
    "snapshot-testing",
    "diff",
    "comparison"
  ],
  "author": "mevla",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guardiavault-oss/ISL-LANG.git"
  },
  "homepage": "https://intentlang.dev",
  "bugs": {
    "url": "https://github.com/guardiavault-oss/ISL-LANG/issues"
  }
}
