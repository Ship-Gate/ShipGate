    "test": "vitest run"
  },
  "dependencies": {
    "@isl-lang/translator": "workspace:*",
    "@isl-lang/generator": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "author": "ISL Team",
  "license": "MIT"
}
