{
  "name": "@isl-lang/proof",
  "version": "0.1.0",
  "description": "ISL Proof Bundle - verifiable proof that spec is satisfied",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "test": "vitest run --passWithNoTests",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "test:unit": "vitest run --passWithNoTests",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@isl-lang/translator": "workspace:*",
    "@isl-lang/generator": "workspace:*",
    "@isl-lang/isl-core": "workspace:*",
    "@isl-lang/parser": "workspace:*",
    "@isl-lang/evaluator": "workspace:*",
    "@isl-lang/isl-coverage": "workspace:*",
    "@isl-lang/secrets-hygiene": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0",
    "rimraf": "^5.0.5"
  },
  "author": "ISL Team",
  "license": "MIT",
  "sideEffects": false
}
