{
  "name": "@isl-lang/proof",
  "version": "0.1.0",
  "description": "ISL Proof Bundle - verifiable proof that spec is satisfied",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean",
