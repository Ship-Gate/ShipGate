{
  "name": "@isl-lang/gate",
  "version": "1.0.0",
  "description": "ISL Gate - SHIP/NO_SHIP decision engine for code quality verification",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./scoring": {
      "import": "./dist/scoring/index.js",
      "types": "./dist/scoring/index.d.ts"
    },
    "./trust-score": {
      "import": "./dist/trust-score/index.js",
      "types": "./dist/trust-score/index.d.ts"
    },
    "./types": {
      "import": "./dist/types/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./specless": {
      "import": "./dist/specless/index.js",
      "types": "./dist/specless/index.d.ts"
    },
    "./pr-analysis": {
      "import": "./dist/pr-analysis/index.js",
      "types": "./dist/pr-analysis/index.d.ts"
    },
    "./verdict-scoring": {
      "import": "./dist/verdict-scoring/index.js",
      "types": "./dist/verdict-scoring/index.d.ts"
    },
    "./verified-intent": {
      "import": "./dist/verified-intent/index.js",
      "types": "./dist/verified-intent/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/scoring/index.ts src/trust-score/index.ts src/types/index.ts src/specless/index.ts src/pr-analysis/index.ts src/verdict-scoring/index.ts src/verified-intent/index.ts --format esm --dts --clean",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "test:unit": "vitest run --passWithNoTests",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "zod": "^3.22.4",
    "@isl-lang/parser": "workspace:*",
    "@isl-lang/typechecker": "workspace:*",
    "@isl-lang/isl-verify": "workspace:*"
  },
  "peerDependencies": {
    "@isl-lang/hallucination-scanner": "workspace:*",
    "@isl-lang/security-scanner": "workspace:*",
    "@isl-lang/firewall": "workspace:*"
  },
  "peerDependenciesMeta": {
    "@isl-lang/hallucination-scanner": {
      "optional": true
    },
    "@isl-lang/security-scanner": {
      "optional": true
    },
    "@isl-lang/firewall": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0",
    "rimraf": "^5.0.5"
  },
  "author": "mevla",
  "license": "MIT",
  "sideEffects": [
    "./dist/chunk-*.js"
  ]
}
