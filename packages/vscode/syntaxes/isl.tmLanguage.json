{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Intent Specification Language",
  "scopeName": "source.isl",
  "fileTypes": ["isl"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#annotations" },
    { "include": "#import-statement" },
    { "include": "#domain-definition" },
    { "include": "#entity-definition" },
    { "include": "#behavior-definition" },
    { "include": "#endpoint-definition" },
    { "include": "#actor-definition" },
    { "include": "#type-definition" },
    { "include": "#builtin-functions" },
    { "include": "#keywords" },
    { "include": "#operators" },
    { "include": "#types" },
    { "include": "#constants" },
    { "include": "#punctuation" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.isl",
          "match": "//.*$"
        },
        {
          "name": "comment.block.documentation.isl",
          "begin": "/\\*\\*",
          "end": "\\*/",
          "patterns": [
            {
              "name": "keyword.other.documentation.isl",
              "match": "@(param|returns|throws|example|see|since|deprecated)\\b"
            }
          ]
        },
        {
          "name": "comment.block.isl",
          "begin": "/\\*",
          "end": "\\*/"
        },
        {
          "name": "comment.line.hash.isl",
          "match": "#.*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.isl",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.isl",
              "match": "\\\\([\"\\\\/bfnrt]|u[0-9a-fA-F]{4})"
            },
            {
              "name": "string.interpolated.isl",
              "match": "\\$\\{[^}]+\\}"
            }
          ]
        },
        {
          "name": "string.quoted.single.isl",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.isl",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.template.isl",
          "begin": "`",
          "end": "`",
          "patterns": [
            {
              "name": "string.interpolated.isl",
              "match": "\\$\\{[^}]+\\}"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.duration.isl",
          "match": "\\b\\d+(\\.\\d+)?\\s*(ms|s|m|h|d|minute|minutes|hour|hours|day|days)\\b"
        },
        {
          "name": "constant.numeric.percentage.isl",
          "match": "\\b(p\\d+|\\d+%)\\b"
        },
        {
          "name": "constant.numeric.hexadecimal.isl",
          "match": "\\b0x[0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.float.isl",
          "match": "\\b\\d+\\.\\d+([eE][+-]?\\d+)?\\b"
        },
        {
          "name": "constant.numeric.integer.isl",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "annotations": {
      "patterns": [
        {
          "name": "meta.annotation.isl",
          "begin": "\\[",
          "end": "\\]",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.annotation.begin.isl" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.definition.annotation.end.isl" }
          },
          "patterns": [
            {
              "name": "keyword.other.annotation.isl",
              "match": "\\b(immutable|unique|indexed|secret|sensitive|optional|required|deprecated|linear|consume|readonly|async|sync|idempotent|cacheable)\\b"
            },
            {
              "name": "meta.annotation.key-value.isl",
              "match": "\\b(min|max|format|default)\\s*:\\s*",
              "captures": { "1": { "name": "keyword.other.annotation-key.isl" } }
            },
            { "include": "#strings" },
            { "include": "#numbers" },
            { "include": "#constants" }
          ]
        }
      ]
    },
    "import-statement": {
      "patterns": [
        {
          "match": "\\b(import)\\s+\\{([^}]+)\\}\\s+(from)\\s+",
          "captures": {
            "1": { "name": "keyword.control.import.isl" },
            "2": { "name": "variable.other.import.isl" },
            "3": { "name": "keyword.control.from.isl" }
          }
        },
        {
          "match": "\\b(import)\\s+([A-Z][a-zA-Z0-9_]*)\\s+(from)\\s+",
          "captures": {
            "1": { "name": "keyword.control.import.isl" },
            "2": { "name": "entity.name.type.isl" },
            "3": { "name": "keyword.control.from.isl" }
          }
        },
        {
          "match": "\\b(use)\\s+([A-Z][a-zA-Z0-9_.]*)",
          "captures": {
            "1": { "name": "keyword.control.use.isl" },
            "2": { "name": "entity.name.type.isl" }
          }
        }
      ]
    },
    "domain-definition": {
      "patterns": [
        {
          "match": "\\b(domain)\\s+([A-Z][a-zA-Z0-9_]*)\\b",
          "captures": {
            "1": { "name": "keyword.declaration.domain.isl" },
            "2": { "name": "entity.name.namespace.isl" }
          }
        },
        {
          "name": "keyword.declaration.version.isl",
          "match": "\\b(version)\\s*:"
        }
      ]
    },
    "entity-definition": {
      "patterns": [
        {
          "match": "\\b(entity)\\s+([A-Z][a-zA-Z0-9_]*)(?:\\s+(extends)\\s+([A-Z][a-zA-Z0-9_]*))?\\b",
          "captures": {
            "1": { "name": "keyword.declaration.entity.isl" },
            "2": { "name": "entity.name.class.isl" },
            "3": { "name": "keyword.declaration.extends.isl" },
            "4": { "name": "entity.other.inherited-class.isl" }
          }
        }
      ]
    },
    "behavior-definition": {
      "patterns": [
        {
          "match": "\\b(behavior)\\s+([A-Z][a-zA-Z0-9_]*)\\b",
          "captures": {
            "1": { "name": "keyword.declaration.behavior.isl" },
            "2": { "name": "entity.name.function.isl" }
          }
        }
      ]
    },
    "endpoint-definition": {
      "patterns": [
        {
          "match": "\\b(endpoint)\\s+([A-Z][a-zA-Z0-9_]*)\\b",
          "captures": {
            "1": { "name": "keyword.declaration.endpoint.isl" },
            "2": { "name": "entity.name.function.isl" }
          }
        },
        {
          "match": "\\b(GET|POST|PUT|PATCH|DELETE|HEAD|OPTIONS)\\b",
          "captures": { "1": { "name": "keyword.other.http-method.isl" } }
        }
      ]
    },
    "actor-definition": {
      "patterns": [
        {
          "match": "\\b(actor)\\s+([A-Z][a-zA-Z0-9_]*)\\b",
          "captures": {
            "1": { "name": "keyword.declaration.actor.isl" },
            "2": { "name": "entity.name.type.isl" }
          }
        }
      ]
    },
    "type-definition": {
      "patterns": [
        {
          "match": "\\b(type|enum|session|handler|property|function)\\s+([A-Z][a-zA-Z0-9_]*)\\b",
          "captures": {
            "1": { "name": "keyword.declaration.type.isl" },
            "2": { "name": "entity.name.type.isl" }
          }
        }
      ]
    },
    "builtin-functions": {
      "patterns": [
        {
          "name": "support.function.builtin.isl",
          "match": "\\b(old|exists|forall|len|sum|count|min|max|avg|abs|contains)\\s*(?=\\()"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.declaration.isl",
          "match": "\\b(domain|version|entity|behavior|endpoint|actor|screen|form|type|enum|session|handler|property|function|intent|constraint)\\b"
        },
        {
          "name": "keyword.control.section.isl",
          "match": "\\b(input|output|preconditions|postconditions|invariants|temporal|security|compliance|actors|errors|lifecycle|description|scope|effects|scenarios|chaos)\\b"
        },
        {
          "name": "keyword.control.scenario.isl",
          "match": "\\b(scenario|given|when|then|inject|expect)\\b"
        },
        {
          "name": "keyword.control.condition.isl",
          "match": "\\b(success|failure|and|or|not|in|for|must|can|cannot|owns|is|where|returns|throws)\\b"
        },
        {
          "name": "keyword.control.temporal.isl",
          "match": "\\b(eventually|within|immediately|never|always|response|before|after)\\b"
        },
        {
          "name": "keyword.control.modifier.isl",
          "match": "\\b(retriable|retry_after|rate_limit|per|enabled|requires|authentication|extends|from|import|export|use)\\b"
        },
        {
          "name": "keyword.control.flow.isl",
          "match": "\\b(choice|end|client|server)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.quantifier.isl",
          "match": "\\b(forall|exists)\\b"
        },
        {
          "name": "keyword.operator.logical.word.isl",
          "match": "\\b(implies|old|sum|let)\\b"
        },
        {
          "name": "keyword.operator.comparison.isl",
          "match": "(==|!=|>=|<=|>|<)"
        },
        {
          "name": "keyword.operator.assignment.isl",
          "match": "(?<![=!<>])=(?!=)"
        },
        {
          "name": "keyword.operator.arrow.isl",
          "match": "(->|=>)"
        },
        {
          "name": "keyword.operator.optional.isl",
          "match": "\\?"
        },
        {
          "name": "keyword.operator.logical.isl",
          "match": "(&&|\\|\\||\\|)"
        },
        {
          "name": "keyword.operator.spread.isl",
          "match": "\\.\\.\\."
        },
        {
          "name": "keyword.operator.range.isl",
          "match": "\\.\\."
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.primitive.isl",
          "match": "\\b(String|Number|Boolean|Int|Float|Decimal|UUID|Timestamp|Date|DateTime|Duration|Email|URL|JSON|Any|Void|Never)\\b"
        },
        {
          "name": "storage.type.primitive.isl",
          "match": "\\b(string|number|boolean|date|datetime|email|url|uuid)\\b"
        },
        {
          "name": "storage.type.collection.isl",
          "match": "\\b(Array|List|Set|Map|Vector|Matrix|array)\\b"
        },
        {
          "name": "storage.type.generic.isl",
          "match": "\\b(Result|Option|Maybe|Either|Success|Failure|optional)\\b"
        },
        {
          "name": "storage.type.special.isl",
          "match": "\\b(Nat|PositiveInt|NonEmptyString|Money|Percentage)\\b"
        },
        {
          "name": "entity.name.type.isl",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.isl",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.null.isl",
          "match": "\\b(null|nil|undefined)\\b"
        },
        {
          "name": "constant.other.enum-member.isl",
          "match": "\\b[A-Z][A-Z0-9_]+\\b"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.definition.block.begin.isl",
          "match": "\\{"
        },
        {
          "name": "punctuation.definition.block.end.isl",
          "match": "\\}"
        },
        {
          "name": "punctuation.definition.parameters.begin.isl",
          "match": "\\("
        },
        {
          "name": "punctuation.definition.parameters.end.isl",
          "match": "\\)"
        },
        {
          "name": "punctuation.definition.generic.begin.isl",
          "match": "<"
        },
        {
          "name": "punctuation.definition.generic.end.isl",
          "match": ">"
        },
        {
          "name": "punctuation.separator.colon.isl",
          "match": ":"
        },
        {
          "name": "punctuation.separator.comma.isl",
          "match": ","
        },
        {
          "name": "punctuation.accessor.dot.isl",
          "match": "\\."
        },
        {
          "name": "punctuation.terminator.semicolon.isl",
          "match": ";"
        },
        {
          "name": "punctuation.definition.list-item.isl",
          "match": "-(?=\\s)"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.parameter.isl",
          "match": "\\b[a-z_][a-zA-Z0-9_]*(?=\\s*:)"
        },
        {
          "name": "variable.other.property.isl",
          "match": "(?<=\\.)\\b[a-z_][a-zA-Z0-9_]*\\b"
        },
        {
          "name": "variable.other.isl",
          "match": "\\b[a-z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
