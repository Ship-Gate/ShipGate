{
  "name": "shipgate-isl",
  "private": true,
  "displayName": "Shipgate â€” Behavioral Verification",
  "description": "Behavioral verification for AI-generated code. Write intent specs, catch violations before they ship.",
  "version": "0.1.1",
  "publisher": "shipgate",
  "license": "MIT",
  "author": "Shipgate Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/shipgate/shipgate"
  },
  "homepage": "https://shipgate.dev",
  "bugs": {
    "url": "https://github.com/shipgate/shipgate/issues"
  },
  "galleryBanner": {
    "color": "#0a0a0a",
    "theme": "dark"
  },
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Testing",
    "Machine Learning"
  ],
  "keywords": [
    "isl",
    "behavioral verification",
    "ai-generated code",
    "intent specification",
    "security",
    "code quality"
  ],
  "main": "./dist/extension.cjs",
  "activationEvents": [
    "onLanguage:isl",
    "workspaceContains:**/*.isl",
    "workspaceContains:.shipgate.yml",
    "workspaceContains:.shipgate",
    "onCommand:shipgate.verify",
    "onCommand:shipgate.init",
    "onStartupFinished"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [{
        "id": "shipgate",
        "title": "ShipGate",
        "icon": "media/shipgate-icon.svg"
      }]
    },
    "views": {
      "shipgate": [{
        "type": "webview",
        "id": "shipgate.sidebar",
        "name": "ShipGate"
      }]
    },
    "languages": [
      {
        "id": "isl",
        "aliases": [
          "ISL",
          "Intent Specification Language"
        ],
        "extensions": [
          ".isl"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/isl-light.svg",
          "dark": "./icons/isl-dark.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "isl",
        "scopeName": "source.isl",
        "path": "./syntaxes/isl.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "isl",
        "path": "./snippets/isl.json"
      }
    ],
    "commands": [
      {
        "command": "shipgate.generateSpec",
        "title": "ShipGate: Generate ISL Spec",
        "category": "ShipGate",
        "icon": "$(file-code)"
      },
      {
        "command": "shipgate.verify",
        "title": "ShipGate: Verify Current Project",
        "category": "ShipGate",
        "icon": "$(shield)"
      },
      {
        "command": "shipgate.verifyFile",
        "title": "ShipGate: Verify Current File",
        "category": "ShipGate",
        "icon": "$(verified)"
      },
      {
        "command": "shipgate.init",
        "title": "ShipGate: Initialize Project",
        "category": "ShipGate",
        "icon": "$(new-folder)"
      },
      {
        "command": "shipgate.ship",
        "title": "ShipGate: Ship Check (Full)",
        "category": "ShipGate",
        "icon": "$(rocket)"
      },
      {
        "command": "shipgate.autofix",
        "title": "ShipGate: Auto-fix Current File",
        "category": "ShipGate",
        "icon": "$(wrench)"
      },
      {
        "command": "shipgate.autofixAll",
        "title": "ShipGate: Auto-fix All Findings",
        "category": "ShipGate",
        "icon": "$(wand)"
      },
      {
        "command": "shipgate.openDashboard",
        "title": "ShipGate: Open Web Dashboard",
        "category": "ShipGate",
        "icon": "$(browser)"
      },
      {
        "command": "shipgate.viewProofBundle",
        "title": "ShipGate: View Latest Proof Bundle",
        "category": "ShipGate",
        "icon": "$(book)"
      },
      {
        "command": "shipgate.showFindings",
        "title": "ShipGate: Show All Findings",
        "category": "ShipGate",
        "icon": "$(search)"
      },
      {
        "command": "shipgate.clearFindings",
        "title": "ShipGate: Clear Findings",
        "category": "ShipGate",
        "icon": "$(clear-all)"
      },
      {
        "command": "shipgate.toggleWatch",
        "title": "ShipGate: Toggle Watch Mode",
        "category": "ShipGate",
        "icon": "$(eye)"
      },
      {
        "command": "shipgate.exportReport",
        "title": "ShipGate: Export Compliance Report",
        "category": "ShipGate",
        "icon": "$(save)"
      },
      {
        "command": "shipgate.verifyAll",
        "title": "ShipGate: Verify Workspace",
        "category": "ShipGate",
        "icon": "$(checklist)"
      },
      {
        "command": "shipgate.coverage",
        "title": "ShipGate: Show ISL Coverage",
        "category": "ShipGate",
        "icon": "$(graph)"
      },
      {
        "command": "shipgate.validateISL",
        "title": "ShipGate: Validate ISL",
        "category": "ShipGate",
        "icon": "$(check)"
      },
      {
        "command": "shipgate.isl.parseFile",
        "title": "ISL: Parse Current File",
        "category": "ISL",
        "icon": "$(symbol-structure)"
      },
      {
        "command": "shipgate.isl.typeCheck",
        "title": "ISL: Type Check Current File",
        "category": "ISL",
        "icon": "$(checklist)"
      },
      {
        "command": "shipgate.isl.generateTypeScript",
        "title": "ISL: Generate TypeScript",
        "category": "ISL",
        "icon": "$(file-code)"
      },
      {
        "command": "shipgate.isl.generateRust",
        "title": "ISL: Generate Rust",
        "category": "ISL",
        "icon": "$(file-code)"
      },
      {
        "command": "shipgate.isl.openRepl",
        "title": "ISL: Open REPL",
        "category": "ISL",
        "icon": "$(terminal)"
      },
      {
        "command": "shipgate.isl.initProject",
        "title": "ISL: Initialize Project",
        "category": "ISL",
        "icon": "$(new-folder)"
      },
      {
        "command": "shipgate.isl.verifySpec",
        "title": "ISL: Verify Spec",
        "category": "ISL",
        "icon": "$(verified)"
      },
      {
        "command": "shipgate.isl.restartServer",
        "title": "ISL: Restart Language Server",
        "category": "ISL",
        "icon": "$(refresh)"
      },
      {
        "command": "shipgate.isl.generateSkeleton",
        "title": "ISL: Generate Skeleton from Spec",
        "category": "ISL",
        "icon": "$(file-code)"
      },
      {
        "command": "shipgate.runScan",
        "title": "Shipgate: Run Scan",
        "category": "Shipgate",
        "icon": "$(search)"
      },
      {
        "command": "shipgate.heal",
        "title": "Shipgate: Heal (AI Autofix)",
        "category": "Shipgate",
        "icon": "$(wand)"
      },
      {
        "command": "shipgate.healFile",
        "title": "Shipgate: Heal File (AI Autofix)",
        "category": "Shipgate",
        "icon": "$(wrench)"
      },
      {
        "command": "shipgate.vibe",
        "title": "ISL: Safe Vibe Coding",
        "category": "ISL",
        "icon": "$(rocket)"
      },
      {
        "command": "shipgate.openVibePanel",
        "title": "ISL: Open Vibe Panel",
        "category": "ISL",
        "icon": "$(sparkle)"
      },
      {
        "command": "shipgate.openReport",
        "title": "Shipgate: Open Report",
        "category": "Shipgate",
        "icon": "$(book)"
      },
      {
        "command": "shipgate.openSettings",
        "title": "Shipgate: Open Settings",
        "category": "Shipgate",
        "icon": "$(settings-gear)"
      },
      {
        "command": "shipgate.selectWorkspaceRoot",
        "title": "Shipgate: Select Workspace Root",
        "category": "Shipgate",
        "icon": "$(folder-opened)"
      },
      {
        "command": "shipgate.codeToIsl",
        "title": "Shipgate: Code to ISL",
        "category": "Shipgate",
        "icon": "$(file-code)"
      },
      {
        "command": "shipgate.codeToIslFromFile",
        "title": "Shipgate: Generate ISL from this file",
        "category": "Shipgate",
        "icon": "$(file-code)"
      },
      {
        "command": "shipgate.githubConnect",
        "title": "Shipgate: Connect GitHub",
        "category": "Shipgate",
        "icon": "$(link)"
      },
      {
        "command": "shipgate.githubRefresh",
        "title": "Shipgate: Refresh GitHub",
        "category": "Shipgate",
        "icon": "$(refresh)"
      },
      {
        "command": "shipgate.runFirewall",
        "title": "Shipgate: Run Firewall on Current File",
        "category": "Shipgate",
        "icon": "$(shield)"
      },
      {
        "command": "shipgate.openWalkthrough",
        "title": "Shipgate: Get Started",
        "category": "Shipgate",
        "icon": "$(book)"
      },
      {
        "command": "shipgate.ship",
        "title": "Shipgate: Ship to GitHub",
        "category": "Shipgate",
        "icon": "$(rocket)"
      },
      {
        "command": "shipgate.upgradePro",
        "title": "Shipgate: Upgrade to Pro",
        "category": "Shipgate",
        "icon": "$(star-full)"
      },
      {
        "command": "shipgate.activatePro",
        "title": "Shipgate: Activate Pro License",
        "category": "Shipgate",
        "icon": "$(key)"
      },
      {
        "command": "shipgate.signOut",
        "title": "Shipgate: Sign Out of Pro",
        "category": "Shipgate",
        "icon": "$(sign-out)"
      }
    ],
    "walkthroughs": [
      {
        "id": "shipgate-walkthrough",
        "title": "Shipgate: Get Started",
        "description": "Learn how to verify AI-generated code and catch violations before they ship.",
        "steps": [
          {
            "id": "overview",
            "title": "Welcome to Shipgate",
            "description": "Behavioral verification for AI-generated code. Catch violations before they ship.\n\nOpen the **Shipgate** panel in the activity bar to get started."
          },
          {
            "id": "run-scan",
            "title": "Run Your First Scan",
            "description": "The Intent Drift gauge shows how well your code matches your specs. Click Run Scan to verify your workspace.\n\n[Run Scan](command:shipgate.runScan)",
            "completionEvents": [
              "onCommand:shipgate.runScan"
            ]
          },
          {
            "id": "live-firewall",
            "title": "Live Firewall",
            "description": "Runs automatically on save for .ts and .js files. Blocks ghost routes, env vars, and imports.\n\n[Open Settings](command:workbench.action.openSettings?%5B%22shipgate%22%5D)"
          },
          {
            "id": "github",
            "title": "Connect GitHub",
            "description": "Link your repo to see PRs and workflow runs. Click Connect in the Shipgate panel to sign in with GitHub (no token needed)."
          },
          {
            "id": "code-to-isl",
            "title": "Code to ISL",
            "description": "Generate intent specs from existing code. Click Generate ISL from Code in the Shipgate panel to scan your workspace.\n\n[Try It](command:shipgate.codeToIsl)"
          }
        ]
      }
    ],
    "keybindings": [
      {
        "command": "shipgate.verify",
        "key": "ctrl+shift+g",
        "mac": "cmd+shift+g"
      },
      {
        "command": "shipgate.verifyFile",
        "key": "ctrl+shift+f5",
        "mac": "cmd+shift+f5"
      },
      {
        "command": "shipgate.autofix",
        "key": "ctrl+shift+.",
        "mac": "cmd+shift+."
      }
    ],
    "configuration": {
      "title": "ShipGate",
      "properties": {
        "shipgate.scanOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Run verification on file save"
        },
        "shipgate.watchMode": {
          "type": "boolean",
          "default": false,
          "description": "Continuously watch for changes"
        },
        "shipgate.showInlineHints": {
          "type": "boolean",
          "default": true,
          "description": "Show inline verification hints"
        },
        "shipgate.showCodeLens": {
          "type": "boolean",
          "default": true,
          "description": "Show ShipGate CodeLens above functions"
        },
        "shipgate.severity.minimum": {
          "type": "string",
          "default": "medium",
          "enum": ["low","medium","high","critical"],
          "description": "Minimum severity to display"
        },
        "shipgate.compliance.frameworks": {
          "type": "array",
          "default": ["soc2"],
          "description": "Active compliance frameworks"
        },
        "shipgate.github.autoSync": {
          "type": "boolean",
          "default": true,
          "description": "Auto-sync CI/CD status from GitHub"
        },
        "shipgate.server.path": {
          "type": "string",
          "default": "",
          "description": "Custom path to the ISL language server executable. Leave empty to use bundled server."
        },
        "shipgate.defaultTarget": {
          "type": "string",
          "enum": [
            "typescript",
            "rust",
            "go",
            "python"
          ],
          "default": "typescript",
          "description": "Default code generation target language"
        },
        "shipgate.formatOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Automatically format ISL files on save"
        },
        "shipgate.lintOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Automatically lint ISL files on save"
        },
        "shipgate.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Trace communication between VS Code and the ISL language server"
        },
        "shipgate.languageServer.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable the ISL language server for advanced features"
        },
        "shipgate.codegen.outputDir": {
          "type": "string",
          "default": "generated",
          "description": "Output directory for generated code"
        },
        "shipgate.validation.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable real-time validation of ISL files"
        },
        "shipgate.coverage.autoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "Automatically refresh coverage decorations on save"
        },
        "shipgate.scan.executablePath": {
          "type": "string",
          "default": "",
          "description": "Path to shipgate/isl CLI executable. Empty = auto-detect (workspace local, pnpm, npx)"
        },
        "shipgate.scan.configPath": {
          "type": "string",
          "default": "",
          "description": "Path to .shipgate.yml. Empty = auto-detect in workspace root"
        },
        "shipgate.scan.projectRoot": {
          "type": "string",
          "default": "",
          "description": "Project root for scan. Empty = workspace root"
        },
        "shipgate.scan.scanOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Gate on save: run full gate (spec + firewall) when you save. Use for small projects; may be slow on large codebases."
        },
        "shipgate.github.token": {
          "type": "string",
          "default": "",
          "description": "GitHub token for API access (repo, PRs, workflow runs). Use a fine-grained token with repo scope."
        },
        "shipgate.firewall.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable live firewall checks on file save"
        },
        "shipgate.firewall.runOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Gate on save (firewall): run lightweight checks on .ts/.js save. Catches ghost routes, hardcoded secrets, policy violations. Fast and recommended."
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "when": "resourceLangId == isl",
          "command": "shipgate.verify",
          "group": "shipgate@1"
        },
        {
          "when": "resourceLangId == isl",
          "command": "shipgate.coverage",
          "group": "shipgate@2"
        },
        {
          "when": "resourceLangId == isl",
          "command": "shipgate.validateISL",
          "group": "shipgate@3"
        },
        {
          "when": "resourceLangId == typescript || resourceLangId == javascript",
          "command": "shipgate.generateSpec",
          "group": "shipgate@1"
        },
        {
          "when": "resourceLangId == typescript || resourceLangId == javascript || resourceLangId == typescriptreact || resourceLangId == javascriptreact || resourceLangId == python",
          "command": "shipgate.verifyFile",
          "group": "shipgate@1"
        },
        {
          "when": "resourceLangId == typescript || resourceLangId == javascript || resourceLangId == typescriptreact || resourceLangId == javascriptreact || resourceLangId == python",
          "command": "shipgate.autofix",
          "group": "shipgate@2"
        },
        {
          "when": "resourceLangId == isl",
          "command": "shipgate.isl.parseFile",
          "group": "isl@1"
        },
        {
          "when": "resourceLangId == isl",
          "command": "shipgate.isl.typeCheck",
          "group": "isl@2"
        },
        {
          "when": "resourceLangId == isl",
          "command": "shipgate.isl.generateTypeScript",
          "group": "isl@3"
        },
        {
          "when": "resourceLangId == isl",
          "command": "shipgate.isl.verifySpec",
          "group": "isl@4"
        },
        {
          "when": "resourceLangId == isl",
          "command": "shipgate.isl.generateSkeleton",
          "group": "isl@5"
        }
      ],
      "editor/title": [
        {
          "when": "resourceLangId == isl",
          "command": "shipgate.verify",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "shipgate.generateSpec"
        },
        {
          "command": "shipgate.verify"
        },
        {
          "command": "shipgate.verifyAll"
        },
        {
          "command": "shipgate.coverage"
        },
        {
          "command": "shipgate.validateISL",
          "when": "resourceLangId == isl"
        },
        {
          "command": "shipgate.isl.parseFile",
          "when": "resourceLangId == isl"
        },
        {
          "command": "shipgate.isl.typeCheck",
          "when": "resourceLangId == isl"
        },
        {
          "command": "shipgate.isl.generateTypeScript",
          "when": "resourceLangId == isl"
        },
        {
          "command": "shipgate.isl.generateRust",
          "when": "resourceLangId == isl"
        },
        {
          "command": "shipgate.isl.verifySpec",
          "when": "resourceLangId == isl"
        },
        {
          "command": "shipgate.isl.openRepl"
        },
        {
          "command": "shipgate.isl.initProject"
        },
        {
          "command": "shipgate.isl.restartServer"
        },
        {
          "command": "shipgate.isl.generateSkeleton",
          "when": "resourceLangId == isl"
        },
        {
          "command": "shipgate.runScan"
        },
        {
          "command": "shipgate.openReport"
        },
        {
          "command": "shipgate.openSettings"
        },
        {
          "command": "shipgate.selectWorkspaceRoot"
        },
        {
          "command": "shipgate.codeToIsl"
        },
        {
          "command": "shipgate.githubConnect"
        },
        {
          "command": "shipgate.githubRefresh"
        },
        {
          "command": "shipgate.runFirewall"
        },
        {
          "command": "shipgate.openWalkthrough"
        },
        {
          "command": "shipgate.ship"
        },
        {
          "command": "shipgate.openVibePanel"
        }
      ]}
    },
    "configurationDefaults": {
      "[isl]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.formatOnSave": true,
        "editor.semanticHighlighting.enabled": true
      }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run build",
    "build": "node esbuild.cjs --production",
    "watch": "node esbuild.cjs --watch",
    "lint": "eslint src --ext ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "clean": "rimraf dist out",
    "package": "vsce package --no-dependencies",
    "publish": "vsce publish --no-dependencies",
    "publish:openvsx": "pnpm run build && pnpm run package && npx ovsx publish --no-dependencies",
    "prepublishOnly": "pnpm run build",
    "test:unit": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@isl-lang/firewall": "workspace:*",
    "@isl-lang/lsp-server": "workspace:*",
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^2.22.0",
    "esbuild": "^0.19.8",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "tsup": "^8.0.1"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "types": "./dist/index.d.ts",
  "sideEffects": false
}
