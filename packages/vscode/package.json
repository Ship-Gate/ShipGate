{
  "name": "shipgate-isl",
  "displayName": "Shipgate ISL â€” Behavioral Verification",
  "description": "Behavioral verification for AI-generated code. Write intent specs, catch violations before they ship.",
  "version": "0.1.0",
  "publisher": "shipgate",
  "license": "MIT",
  "author": "Shipgate Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/shipgate/shipgate"
  },
  "homepage": "https://shipgate.dev",
  "bugs": {
    "url": "https://github.com/shipgate/shipgate/issues"
  },
  "galleryBanner": {
    "color": "#0a0a0a",
    "theme": "dark"
  },
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Testing"
  ],
  "keywords": [
    "isl",
    "behavioral verification",
    "ai-generated code",
    "intent specification",
    "security",
    "code quality"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onLanguage:isl",
    "workspaceContains:**/*.isl"
  ],
  "contributes": {
    "languages": [
      {
        "id": "isl",
        "aliases": [
          "ISL",
          "Intent Specification Language"
        ],
        "extensions": [
          ".isl"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/isl-light.svg",
          "dark": "./icons/isl-dark.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "isl",
        "scopeName": "source.isl",
        "path": "./syntaxes/isl.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "isl",
        "path": "./snippets/isl.json"
      }
    ],
    "commands": [
      {
        "command": "shipgate.generateSpec",
        "title": "ShipGate: Generate ISL Spec",
        "category": "ShipGate",
        "icon": "$(file-code)"
      },
      {
        "command": "shipgate.verify",
        "title": "ShipGate: Verify Current File",
        "category": "ShipGate",
        "icon": "$(verified)"
      },
      {
        "command": "shipgate.verifyAll",
        "title": "ShipGate: Verify Workspace",
        "category": "ShipGate",
        "icon": "$(checklist)"
      },
      {
        "command": "shipgate.coverage",
        "title": "ShipGate: Show ISL Coverage",
        "category": "ShipGate",
        "icon": "$(graph)"
      },
      {
        "command": "shipgate.validateISL",
        "title": "ShipGate: Validate ISL",
        "category": "ShipGate",
        "icon": "$(check)"
      },
      {
        "command": "isl.parseFile",
        "title": "ISL: Parse Current File",
        "category": "ISL",
        "icon": "$(symbol-structure)"
      },
      {
        "command": "isl.typeCheck",
        "title": "ISL: Type Check Current File",
        "category": "ISL",
        "icon": "$(checklist)"
      },
      {
        "command": "isl.generateTypeScript",
        "title": "ISL: Generate TypeScript",
        "category": "ISL",
        "icon": "$(file-code)"
      },
      {
        "command": "isl.generateRust",
        "title": "ISL: Generate Rust",
        "category": "ISL",
        "icon": "$(file-code)"
      },
      {
        "command": "isl.openRepl",
        "title": "ISL: Open REPL",
        "category": "ISL",
        "icon": "$(terminal)"
      },
      {
        "command": "isl.initProject",
        "title": "ISL: Initialize Project",
        "category": "ISL",
        "icon": "$(new-folder)"
      },
      {
        "command": "isl.verifySpec",
        "title": "ISL: Verify Spec",
        "category": "ISL",
        "icon": "$(verified)"
      },
      {
        "command": "isl.restartServer",
        "title": "ISL: Restart Language Server",
        "category": "ISL",
        "icon": "$(refresh)"
      },
      {
        "command": "isl.generateSkeleton",
        "title": "ISL: Generate Skeleton from Spec",
        "category": "ISL",
        "icon": "$(file-code)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceLangId == isl",
          "command": "shipgate.verify",
          "group": "shipgate@1"
        },
        {
          "when": "resourceLangId == isl",
          "command": "shipgate.coverage",
          "group": "shipgate@2"
        },
        {
          "when": "resourceLangId == isl",
          "command": "shipgate.validateISL",
          "group": "shipgate@3"
        },
        {
          "when": "resourceLangId == typescript || resourceLangId == javascript",
          "command": "shipgate.generateSpec",
          "group": "shipgate@1"
        },
        {
          "when": "resourceLangId == isl",
          "command": "isl.parseFile",
          "group": "isl@1"
        },
        {
          "when": "resourceLangId == isl",
          "command": "isl.typeCheck",
          "group": "isl@2"
        },
        {
          "when": "resourceLangId == isl",
          "command": "isl.generateTypeScript",
          "group": "isl@3"
        },
        {
          "when": "resourceLangId == isl",
          "command": "isl.verifySpec",
          "group": "isl@4"
        },
        {
          "when": "resourceLangId == isl",
          "command": "isl.generateSkeleton",
          "group": "isl@5"
        }
      ],
      "editor/title": [
        {
          "when": "resourceLangId == isl",
          "command": "shipgate.verify",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "shipgate.generateSpec"
        },
        {
          "command": "shipgate.verify"
        },
        {
          "command": "shipgate.verifyAll"
        },
        {
          "command": "shipgate.coverage"
        },
        {
          "command": "shipgate.validateISL",
          "when": "resourceLangId == isl"
        },
        {
          "command": "isl.parseFile",
          "when": "resourceLangId == isl"
        },
        {
          "command": "isl.typeCheck",
          "when": "resourceLangId == isl"
        },
        {
          "command": "isl.generateTypeScript",
          "when": "resourceLangId == isl"
        },
        {
          "command": "isl.generateRust",
          "when": "resourceLangId == isl"
        },
        {
          "command": "isl.verifySpec",
          "when": "resourceLangId == isl"
        },
        {
          "command": "isl.openRepl"
        },
        {
          "command": "isl.initProject"
        },
        {
          "command": "isl.restartServer"
        },
        {
          "command": "isl.generateSkeleton",
          "when": "resourceLangId == isl"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "ShipGate ISL Configuration",
      "properties": {
        "shipgate.server.path": {
          "type": "string",
          "default": "",
          "description": "Custom path to the ISL language server executable. Leave empty to use bundled server."
        },
        "shipgate.defaultTarget": {
          "type": "string",
          "enum": [
            "typescript",
            "rust",
            "go",
            "python"
          ],
          "default": "typescript",
          "description": "Default code generation target language"
        },
        "shipgate.formatOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Automatically format ISL files on save"
        },
        "shipgate.lintOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Run linter on save"
        },
        "shipgate.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Trace communication between VS Code and the ISL language server"
        },
        "shipgate.languageServer.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable the ISL language server for advanced features"
        },
        "shipgate.codegen.outputDir": {
          "type": "string",
          "default": "generated",
          "description": "Output directory for generated code"
        },
        "shipgate.validation.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable real-time validation of ISL files"
        },
        "shipgate.coverage.autoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "Automatically refresh coverage decorations on save"
        }
      }
    },
    "configurationDefaults": {
      "[isl]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.formatOnSave": true,
        "editor.semanticHighlighting.enabled": true
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run build",
    "build": "node esbuild.js --production",
    "watch": "node esbuild.js --watch",
    "lint": "eslint src --ext ts",
    "typecheck": "tsc --noEmit",
    "test": "node ./out/test/runTest.js",
    "clean": "rimraf dist out",
    "package": "vsce package --no-dependencies",
    "publish": "vsce publish --no-dependencies",
    "prepublishOnly": "pnpm run build",
    "test:unit": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "@isl-lang/lsp-server": "workspace:*",
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^2.22.0",
    "esbuild": "^0.19.8",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "tsup": "^8.0.1"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}
