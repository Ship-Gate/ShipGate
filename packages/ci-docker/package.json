{
  "name": "@isl-lang/ci-docker",
  "version": "1.0.0",
  "description": "Docker image for Shipgate CI integrations",
  "private": true,
  "scripts": {
    "build": "echo 'Docker build skipped in CI - use docker build directly' && exit 0",
    "build:docker": "docker build -t ghcr.io/shipgate/shipgate:v1 .",
    "build:latest": "docker build -t ghcr.io/shipgate/shipgate:latest .",
    "build:version": "docker build -t ghcr.io/shipgate/shipgate:v1.0.0 .",
    "test": "echo 'No tests for Docker image' && exit 0",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "test:unit": "echo 'No tests for Docker image' && exit 0"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "tsup": "^8.0.1",
    "rimraf": "^5.0.5"
  }
}
