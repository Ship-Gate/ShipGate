{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "implementations/typescript",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "lib": ["ES2022", "DOM"],
    "types": ["node"],
    "noEmit": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": ["implementations/typescript/**/*"],
  "exclude": ["node_modules", "dist", "tests"]
}
