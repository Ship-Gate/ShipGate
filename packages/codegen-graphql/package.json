{
  "name": "@isl-lang/codegen-graphql",
  "version": "0.1.0",
  "description": "GraphQL schema and resolver generator for ISL",
  "author": "ISL Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/isl-lang/isl.git",
    "directory": "packages/codegen-graphql"
  },
  "homepage": "https://isl-lang.dev/docs/codegen-graphql",
  "bugs": {
    "url": "https://github.com/isl-lang/isl/issues"
  },
  "keywords": [
    "isl",
    "codegen",
    "graphql",
    "code-generation",
    "schema"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "prepublishOnly": "pnpm run build && pnpm run test"
  },
  "dependencies": {
    "@isl-lang/parser": "workspace:*",
    "@isl-lang/typechecker": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "private": true
}