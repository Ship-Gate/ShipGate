{
  "name": "@isl-lang/isl-verify-action",
  "version": "0.1.0",
  "description": "GitHub Action for ISL verification on pull requests",
  "main": "dist/index.js",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --passWithNoTests",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vercel/ncc": "^0.38.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  },
  "files": [
    "dist",
    "action.yml"
  ],
  "keywords": [
    "isl",
    "github-action",
    "verification",
    "ci-cd"
  ],
  "author": "ISL Team",
  "license": "MIT"
}
