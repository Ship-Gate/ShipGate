{
  "name": "@isl-lang/opentelemetry",
  "version": "1.0.0",
  "description": "OpenTelemetry integration for ISL verification tracing",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./spans": {
      "import": "./dist/spans/index.mjs",
      "require": "./dist/spans/index.js",
      "types": "./dist/spans/index.d.ts"
    },
    "./metrics": {
      "import": "./dist/metrics/index.mjs",
      "require": "./dist/metrics/index.js",
      "types": "./dist/metrics/index.d.ts"
    },
    "./exporters": {
      "import": "./dist/exporters/index.mjs",
      "require": "./dist/exporters/index.js",
      "types": "./dist/exporters/index.d.ts"
    },
    "./instrumentation": {
      "import": "./dist/instrumentation/index.mjs",
      "require": "./dist/instrumentation/index.js",
      "types": "./dist/instrumentation/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run --passWithNoTests",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "test:unit": "vitest run --passWithNoTests"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.7.0",
    "@opentelemetry/sdk-trace-node": "^1.19.0",
    "@opentelemetry/sdk-trace-base": "^1.19.0",
    "@opentelemetry/sdk-metrics": "^1.19.0",
    "@opentelemetry/resources": "^1.19.0",
    "@opentelemetry/semantic-conventions": "^1.19.0",
    "@opentelemetry/exporter-jaeger": "^1.19.0",
    "@opentelemetry/exporter-zipkin": "^1.19.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.46.0",
    "@opentelemetry/exporter-trace-otlp-grpc": "^0.46.0",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.46.0",
    "@opentelemetry/context-async-hooks": "^1.19.0",
    "@opentelemetry/propagator-b3": "^1.19.0",
    "@opentelemetry/propagator-jaeger": "^1.19.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "express": "^4.18.2",
    "fastify": "^4.25.0",
    "@grpc/grpc-js": "^1.9.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "rimraf": "^5.0.5"
  },
  "peerDependencies": {
    "express": "^4.18.0",
    "fastify": "^4.0.0",
    "@grpc/grpc-js": "^1.9.0"
  },
  "peerDependenciesMeta": {
    "express": {
      "optional": true
    },
    "fastify": {
      "optional": true
    },
    "@grpc/grpc-js": {
      "optional": true
    }
  },
  "keywords": [
    "opentelemetry",
    "tracing",
    "observability",
    "isl",
    "verification",
    "metrics"
  ],
  "license": "MIT",
  "author": "mevla",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guardiavault-oss/ISL-LANG.git"
  },
  "homepage": "https://intentlang.dev",
  "bugs": {
    "url": "https://github.com/guardiavault-oss/ISL-LANG/issues"
  },
  "private": true,
  "experimental": true,
  "type": "module",
  "sideEffects": false
}
