{
  "name": "@isl-lang/stdlib-api",
  "version": "0.1.0",
  "description": "API definition standard library - REST, GraphQL, and RPC patterns",
  "license": "MIT",
  "author": "mevla",
  "homepage": "https://intentlang.dev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guardiavault-oss/ISL-LANG.git"
  },
  "bugs": {
    "url": "https://github.com/guardiavault-oss/ISL-LANG/issues"
  },
  "keywords": [
    "isl",
    "intent-specification-language",
    "stdlib",
    "api",
    "rest",
    "graphql",
    "openapi",
    "crud"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./http": {
      "types": "./dist/http.d.ts",
      "import": "./dist/http.js",
      "require": "./dist/http.cjs"
    },
    "./endpoint": {
      "types": "./dist/endpoint.d.ts",
      "import": "./dist/endpoint.js",
      "require": "./dist/endpoint.cjs"
    },
    "./crud": {
      "types": "./dist/crud.d.ts",
      "import": "./dist/crud.js",
      "require": "./dist/crud.cjs"
    },
    "./graphql": {
      "types": "./dist/graphql.d.ts",
      "import": "./dist/graphql.js",
      "require": "./dist/graphql.cjs"
    }
  },
  "files": [
    "dist",
    "intents",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
