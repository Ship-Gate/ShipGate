{
  "name": "@isl-lang/trace-format",
  "version": "0.1.0",
  "description": "Stable trace event schema for ISL generated tests, healer iterations, verification engine, and proof bundles",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./schema": {
      "import": "./dist/schema.js",
      "types": "./dist/schema.d.ts"
    }
  },
  "files": [
    "dist",
    "schema.json"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/schema.ts --format esm --dts --clean",
    "dev": "tsup src/index.ts src/schema.ts --format esm --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@isl-lang/pipeline": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "ajv": "^8.12.0",
    "ajv-formats": "^3.0.1",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "author": "ISL Team",
  "license": "MIT",
  "private": true,
  "experimental": true
}
