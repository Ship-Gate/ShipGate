{
  "name": "@isl-lang/stdlib-payments",
  "version": "1.0.0",
  "description": "ISL Payments Standard Library - PCI-compliant payment processing behaviors",
  "author": "mevla",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./types": {
      "import": "./dist/types.js",
      "types": "./dist/types.d.ts"
    },
    "./behaviors/*": {
      "import": "./dist/behaviors/*.js",
      "types": "./dist/behaviors/*.d.ts"
    }
  },
  "files": [
    "dist",
    "intents",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint implementations/typescript --ext .ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test:unit": "vitest run --passWithNoTests"
  },
  "dependencies": {
    "crypto": "^1.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "tsup": "^8.0.1",
    "rimraf": "^5.0.5"
  },
  "peerDependencies": {
    "@isl-lang/isl-core": "workspace:*"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "intentos",
    "isl",
    "payments",
    "pci",
    "stripe",
    "braintree",
    "adyen",
    "stdlib"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guardiavault-oss/ISL-LANG.git"
  },
  "bugs": {
    "url": "https://github.com/guardiavault-oss/ISL-LANG/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://intentlang.dev",
  "sideEffects": false
}
