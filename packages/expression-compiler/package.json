{
  "name": "@isl-lang/expression-compiler",
  "version": "0.1.0",
  "description": "ISL Expression Compiler - Parse, normalize, and evaluate ISL expressions",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./ir": {
      "import": "./dist/ir/index.js",
      "types": "./dist/ir/index.d.ts"
    },
    "./compiler": {
      "import": "./dist/compiler/index.js",
      "types": "./dist/compiler/index.d.ts"
    },
    "./evaluator": {
      "import": "./dist/evaluator/index.js",
      "types": "./dist/evaluator/index.d.ts"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src tests --ext .ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@isl-lang/parser": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.0",
    "vitest": "^1.1.0"
  },
  "keywords": [
    "isl",
    "expression",
    "compiler",
    "evaluator",
    "ir"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/intentos/intentos.git",
    "directory": "packages/expression-compiler"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "private": true,
  "experimental": true
}
