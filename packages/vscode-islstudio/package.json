{
  "name": "vscode-islstudio",
  "displayName": "ISL Studio",
  "description": "Block risky code before it ships. 25 rules for auth bypass, PII leaks, payment issues, and missing rate limits.",
  "version": "0.1.0",
  "publisher": "isl-studio",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ISL-Studio/ISL-Studio-"
  },
  "bugs": {
    "url": "https://github.com/ISL-Studio/ISL-Studio-/issues"
  },
  "homepage": "https://islstudio.dev",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Linters",
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "security",
    "linter",
    "auth",
    "pii",
    "gate",
    "typescript",
    "javascript",
    "code review",
    "pull request"
  ],
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "badges": [
    {
      "url": "https://img.shields.io/npm/v/islstudio.svg",
      "href": "https://www.npmjs.com/package/islstudio",
      "description": "npm version"
    }
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:javascript",
    "onLanguage:typescriptreact",
    "onLanguage:javascriptreact"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "islstudio.runGate",
        "title": "ISL Studio: Run Gate (All Files)",
        "icon": "$(shield)"
      },
      {
        "command": "islstudio.runGateChangedOnly",
        "title": "ISL Studio: Run Gate (Changed Files Only)",
        "icon": "$(git-compare)"
      },
      {
        "command": "islstudio.explainRule",
        "title": "ISL Studio: Explain Rule",
        "icon": "$(book)"
      },
      {
        "command": "islstudio.createBaseline",
        "title": "ISL Studio: Create Baseline",
        "icon": "$(save)"
      },
      {
        "command": "islstudio.useBaseline",
        "title": "ISL Studio: Show Baseline Status",
        "icon": "$(list-flat)"
      },
      {
        "command": "islstudio.init",
        "title": "ISL Studio: Initialize Project",
        "icon": "$(rocket)"
      },
      {
        "command": "islstudio.showOutput",
        "title": "ISL Studio: Show Output",
        "icon": "$(output)"
      }
    ],
    "menus": {
      "commandPalette": [
        { "command": "islstudio.runGate" },
        { "command": "islstudio.runGateChangedOnly" },
        { "command": "islstudio.explainRule" },
        { "command": "islstudio.createBaseline" },
        { "command": "islstudio.useBaseline" },
        { "command": "islstudio.init" }
      ]
    },
    "configuration": {
      "title": "ISL Studio",
      "properties": {
        "islstudio.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable ISL Studio diagnostics"
        },
        "islstudio.runOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Run quick check on file save"
        },
        "islstudio.runOnOpen": {
          "type": "boolean",
          "default": true,
          "description": "Run gate on workspace open"
        },
        "islstudio.changedOnlyByDefault": {
          "type": "boolean",
          "default": true,
          "description": "Only check changed files by default"
        }
      }
    }
  },
  "scripts": {
    "build": "tsup",
    "watch": "tsup --watch",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {}
}
