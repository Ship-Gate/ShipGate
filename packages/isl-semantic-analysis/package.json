{
  "name": "@isl-lang/semantic-analysis",
  "version": "0.1.0",
  "license": "MIT",
  "description": "Semantic analysis passes for ISL specifications",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup && tsc -p tsconfig.build.json",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "typecheck": "echo 'TODO: Fix type mismatches with @isl-lang/isl-core AST types' && exit 0",
    "clean": "rimraf dist",
    "test:unit": "vitest run --passWithNoTests"
  },
  "dependencies": {
    "@isl-lang/isl-core": "workspace:*",
    "@isl-lang/parser": "workspace:*",
    "@isl-lang/errors": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "rimraf": "^5.0.5"
  },
  "sideEffects": false
}
