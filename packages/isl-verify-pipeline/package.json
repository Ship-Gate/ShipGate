{
  "name": "@isl-lang/verify-pipeline",
  "version": "1.0.0",
  "description": "Verification orchestrator pipeline for ISL - runs tests, captures traces, evaluates postconditions/invariants, and produces proof bundles",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist",
    "test:unit": "vitest run --passWithNoTests",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "isl",
    "verification",
    "pipeline",
    "proof",
    "testing",
    "postconditions",
    "invariants",
    "smt"
  ],
  "author": "IntentOS Team",
  "license": "MIT",
  "dependencies": {
    "@isl-lang/isl-core": "workspace:*",
    "@isl-lang/proof": "workspace:*",
    "@isl-lang/trace-format": "workspace:*",
    "@isl-lang/verifier-runtime": "workspace:*",
    "@isl-lang/evaluator": "workspace:*",
    "@isl-lang/import-resolver": "workspace:*",
    "@isl-lang/parser": "workspace:*",
    "@isl-lang/static-analyzer": "workspace:*",
    "@isl-lang/typechecker": "workspace:*",
    "@isl-lang/test-generator": "workspace:*",
    "@isl-lang/gate": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "rimraf": "^5.0.5"
  },
  "peerDependencies": {
    "vitest": ">=1.0.0",
    "@isl-lang/isl-smt": "workspace:*"
  },
  "peerDependenciesMeta": {
    "vitest": {
      "optional": true
    },
    "@isl-lang/isl-smt": {
      "optional": true
    }
  },
  "type": "module",
  "sideEffects": false
}
