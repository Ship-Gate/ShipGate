{
  "name": "@isl-lang/adapters",
  "version": "0.1.0",
  "description": "ISL Adapters - GitHub Actions, MCP tools, and CLI integrations",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./github": {
      "import": "./dist/github/index.js",
      "types": "./dist/github/index.d.ts"
    },
    "./mcp": {
      "import": "./dist/mcp/index.js",
      "types": "./dist/mcp/index.d.ts"
    },
    "./cli": {
      "import": "./dist/cli/index.js",
      "types": "./dist/cli/index.d.ts"
    }
  },
  "files": [
    "dist",
    "github-action"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/github/index.ts src/mcp/index.ts src/cli/index.ts --format esm --clean --external @isl-lang/verified-build --external @isl-lang/gate --external @isl-lang/evidence --external @isl-lang/firewall",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@isl-lang/gate": "workspace:*",
    "@isl-lang/evidence": "workspace:*",
    "@isl-lang/firewall": "workspace:*",
    "@isl-lang/verified-build": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0",
    "rimraf": "^5.0.5"
  },
  "author": "mevla",
  "license": "MIT"
}
