{
  "name": "@isl-lang/codegen",
  "version": "0.1.0",
  "description": "ISL code generators - umbrella package for all code generation targets",
  "author": "ISL Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/isl-lang/isl.git",
    "directory": "packages/codegen"
  },
  "homepage": "https://isl-lang.dev/docs/codegen",
  "bugs": {
    "url": "https://github.com/isl-lang/isl/issues"
  },
  "keywords": [
    "isl",
    "codegen",
    "code-generation",
    "typescript",
    "python",
    "openapi",
    "graphql",
    "rust",
    "go"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./python": {
      "types": "./dist/python.d.ts",
      "import": "./dist/python.js",
      "require": "./dist/python.cjs"
    },
    "./openapi": {
      "types": "./dist/openapi.d.ts",
      "import": "./dist/openapi.js",
      "require": "./dist/openapi.cjs"
    },
    "./graphql": {
      "types": "./dist/graphql.d.ts",
      "import": "./dist/graphql.js",
      "require": "./dist/graphql.cjs"
    },
    "./typescript": {
      "types": "./dist/typescript.d.ts",
      "import": "./dist/typescript.js",
      "require": "./dist/typescript.cjs"
    },
    "./rust": {
      "types": "./dist/rust.d.ts",
      "import": "./dist/rust.js",
      "require": "./dist/rust.cjs"
    },
    "./go": {
      "types": "./dist/go.d.ts",
      "import": "./dist/go.js",
      "require": "./dist/go.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "prepublishOnly": "pnpm run build && pnpm run test",
    "test:unit": "vitest run --passWithNoTests"
  },
  "dependencies": {
    "@isl-lang/codegen-python": "workspace:*",
    "@isl-lang/codegen-openapi": "workspace:*",
    "@isl-lang/codegen-graphql": "workspace:*",
    "@isl-lang/codegen-types": "workspace:*",
    "@isl-lang/codegen-rust": "workspace:*",
    "@isl-lang/codegen-go": "workspace:*",
    "@isl-lang/codegen-validators": "workspace:*",
    "@isl-lang/codegen-tests": "workspace:*",
    "@isl-lang/codegen-mocks": "workspace:*",
    "@isl-lang/codegen-docs": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "sideEffects": false
}
