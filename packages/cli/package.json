{
  "name": "shipgate",
  "version": "2.0.0",
  "description": "ShipGate â€” Stop AI from shipping fake features. Define what your code should do. We enforce it.",
  "author": "ISL Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ship-Gate/ShipGate.git",
    "directory": "packages/cli"
  },
  "homepage": "https://shipgate.dev",
  "bugs": {
    "url": "https://github.com/Ship-Gate/ShipGate/issues"
  },
  "keywords": [
    "shipgate",
    "isl",
    "intent-specification-language",
    "cli",
    "ai",
    "verification",
    "code-generation",
    "ai-safety",
    "ship-gate"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "engines": {
    "node": ">=18"
  },
  "bin": {
    "shipgate": "dist/cli.cjs",
    "isl": "dist/cli.cjs"
  },
  "files": [
    "dist",
    "dist/cli.cjs",
    "README.md",
    "LICENSE",
    "scripts/postinstall.js"
  ],
  "scripts": {
    "prebuild": "node scripts/resolve-workspace-deps.js",
    "build": "node scripts/build-with-esbuild.js",
    "build:tsup": "tsup",
    "build:deps": "node scripts/build-deps.js",
    "build:full": "pnpm run build:deps && pnpm run build",
    "build:bundle": "bash scripts/build.sh",
    "dev": "tsup --watch",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:smoke": "vitest run tests/smoke.test.ts",
    "test:e2e-consumer": "vitest run tests/e2e-published.test.ts",
    "test:packaging": "vitest run tests/packaging.test.ts",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit -p tsconfig.typecheck.json",
    "clean": "rimraf dist",
    "prepack": "pnpm run build",
    "prepublishOnly": "pnpm run build && node dist/cli.cjs --help",
    "postinstall": "node scripts/postinstall.js",
    "pack:check": "npm pack --dry-run",
    "test:unit": "vitest run --passWithNoTests"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.8.0",
    "@opentelemetry/resources": "^1.22.0",
