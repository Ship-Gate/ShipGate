{
  "name": "@isl-lang/stdlib-billing",
  "version": "1.0.0",
  "description": "Billing and subscription management standard library for ISL",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./stripe": {
      "import": "./dist/stripe.js",
      "types": "./dist/stripe.d.ts"
    },
    "./paddle": {
      "import": "./dist/paddle.js",
      "types": "./dist/paddle.d.ts"
    }
  },
  "files": [
    "dist",
    "intents"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/stripe.ts src/paddle.ts --format esm --dts --clean",
    "dev": "tsup src/index.ts src/stripe.ts src/paddle.ts --format esm --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "stripe": "^14.0.0"
  },
  "devDependencies": {
    "@types/node": "^25.1.0",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "peerDependencies": {
    "@isl-lang/isl-core": "workspace:*"
  },
  "author": "mevla",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guardiavault-oss/ISL-LANG.git"
  },
  "homepage": "https://intentlang.dev",
  "bugs": {
    "url": "https://github.com/guardiavault-oss/ISL-LANG/issues"
  }
}
