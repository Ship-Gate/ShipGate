{
  "name": "@isl-lang/expression-evaluator",
  "version": "0.1.0",
  "description": "ISL expression evaluator with tri-state logic for postconditions and invariants",
  "author": "ISL Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/isl-lang/isl.git",
    "directory": "packages/isl-expression-evaluator"
  },
  "homepage": "https://isl-lang.dev/docs/expression-evaluator",
  "bugs": {
    "url": "https://github.com/isl-lang/isl/issues"
  },
  "keywords": [
    "isl",
    "evaluator",
    "expression",
    "postcondition",
    "invariant",
    "tri-state",
    "verification"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "bench": "tsx src/v1/bench.ts",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "@isl-lang/parser": "workspace:*",
    "@isl-lang/trace-format": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
