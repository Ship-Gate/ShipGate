{
  "name": "@isl-lang/test-runtime",
  "version": "0.1.0",
  "description": "Runtime utilities for generating and running executable tests with verification traces",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "tsx run-tests.ts",
    "test:scenarios": "tsx run-tests.ts --scenarios",
    "test:export": "tsx run-tests.ts --export",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@isl-lang/trace-format": "workspace:*",
    "@isl-lang/trace-viewer": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^25.1.0",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "author": "mevla",
  "license": "MIT"
}
