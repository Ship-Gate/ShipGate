{
  "name": "@isl-lang/errors",
  "version": "1.0.0",
  "description": "Unified error infrastructure for the ISL toolchain - best-in-class error messages",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./formatter": {
      "import": "./dist/formatter.js",
      "types": "./dist/formatter.d.ts"
    },
    "./codes": {
      "import": "./dist/codes.js",
      "types": "./dist/codes.d.ts"
    },
    "./catalog": {
      "import": "./dist/catalog.js",
      "types": "./dist/catalog.d.ts"
    },
    "./suggestions": {
      "import": "./dist/suggestions.js",
      "types": "./dist/suggestions.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest run --passWithNoTests",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/"
  },
  "keywords": [
    "isl",
    "errors",
    "diagnostics",
    "formatter",
    "compiler-errors"
  ],
  "author": "mevla",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "vitest": "^1.1.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guardiavault-oss/ISL-LANG.git"
  },
  "homepage": "https://intentlang.dev",
  "bugs": {
    "url": "https://github.com/guardiavault-oss/ISL-LANG/issues"
  }
}
