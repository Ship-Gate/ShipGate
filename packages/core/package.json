{
  "name": "@isl-lang/core",
  "version": "0.1.1",
  "description": "ISL Core - translator and corpus testing utilities",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./evidence": {
      "import": "./dist/evidence/index.js",
      "types": "./dist/evidence/index.d.ts"
    },
    "./scoring": {
      "import": "./dist/isl-agent/scoring/index.js",
      "types": "./dist/isl-agent/scoring/index.d.ts"
    },
    "./context": {
      "import": "./dist/context/index.js",
      "types": "./dist/context/index.d.ts"
    },
    "./isl-lint": {
      "import": "./dist/isl-lint/index.js",
      "types": "./dist/isl-lint/index.d.ts"
    },
    "./isl-diff": {
      "import": "./dist/isl-diff/index.js",
      "types": "./dist/isl-diff/index.d.ts"
    },
    "./isl-lint-v2": {
      "import": "./dist/isl-lint-v2/index.js",
      "types": "./dist/isl-lint-v2/index.d.ts"
    },
    "./isl-migrate-v2": {
      "import": "./dist/isl-migrate-v2/index.js",
      "types": "./dist/isl-migrate-v2/index.d.ts"
    },
    "./spec-quality": {
      "import": "./dist/spec-quality/index.js",
      "types": "./dist/spec-quality/index.d.ts"
    },
    "./reporting": {
      "import": "./dist/reporting/index.js",
      "types": "./dist/reporting/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/evidence/index.ts src/isl-agent/scoring/index.ts src/isl-lint/index.ts src/isl-diff/index.ts src/isl-lint-v2/index.ts src/isl-migrate-v2/index.ts src/spec-quality/index.ts src/reporting/index.ts --format esm --dts --clean",
    "dev": "tsup src/index.ts src/evidence/index.ts --format esm --dts --watch",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "test:unit": "vitest run --passWithNoTests",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@isl-lang/isl-certificate": "workspace:*",
    "@isl-lang/parser": "workspace:*",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0",
    "rimraf": "^5.0.5"
  },
  "author": "mevla",
  "license": "MIT",
  "experimental": true,
  "sideEffects": [
    "./dist/chunk-*.js"
  ]
}
