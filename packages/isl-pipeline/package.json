{
  "name": "@isl-lang/pipeline",
  "version": "0.1.0",
  "description": "ISL Pipeline: NL → ISL → Code → Gate → Proof",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "isl-pipeline": "./dist/cli.js",
    "isl-performance": "./dist/performance/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "demo": "tsx demo.ts",
    "demo:login": "tsx demo-login/run.ts",
    "demo:login:failure": "tsx demo-login/failure-mode.ts",
    "cli": "tsx src/cli.ts",
    "test": "vitest run",
    "benchmark": "tsx src/performance/cli.ts benchmark",
    "perf:regression": "tsx src/performance/cli.ts regression"
  },
  "dependencies": {
    "@isl-lang/isl-core": "workspace:*",
    "@isl-lang/translator": "workspace:*",
    "@isl-lang/generator": "workspace:*",
    "@isl-lang/proof": "workspace:*",
    "picocolors": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "author": "ISL Team",
  "license": "MIT"
}
