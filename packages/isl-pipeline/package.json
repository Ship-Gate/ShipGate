{
  "name": "@isl-lang/pipeline",
  "version": "0.1.0",
  "description": "ISL Pipeline: NL → ISL → Code → Gate → Proof",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "demo": "tsx demo.ts",
    "test": "vitest run"
  },
  "dependencies": {
    "@isl-lang/translator": "workspace:*",
    "@isl-lang/generator": "workspace:*",
    "@isl-lang/proof": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "author": "ISL Team",
  "license": "MIT"
}
