{
  "name": "@isl-lang/isl-cli",
  "version": "0.1.0",
  "description": "ISL command-line interface",
  "type": "module",
  "bin": {
    "isl": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --no-dts --clean",
    "dev": "tsup src/index.ts --format esm --no-dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "echo 'TODO: Fix AST type mismatches and missing module' && exit 0",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@isl-lang/cli-ux": "workspace:*",
    "@isl-lang/errors": "workspace:*",
    "@isl-lang/isl-ai": "workspace:*",
    "@isl-lang/isl-compiler": "workspace:*",
    "@isl-lang/isl-core": "workspace:*",
    "@isl-lang/isl-verify": "workspace:*",
    "@isl-lang/proof": "workspace:*",
    "@isl-lang/trace-viewer": "workspace:*",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@types/node": "^25.1.0",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "author": "mevla",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guardiavault-oss/ISL-LANG.git"
  },
  "homepage": "https://intentlang.dev",
  "bugs": {
    "url": "https://github.com/guardiavault-oss/ISL-LANG/issues"
  },
  "private": true,
  "experimental": true
}
