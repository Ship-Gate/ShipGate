{
  "name": "@isl-lang/isl-discovery",
  "version": "0.1.0",
  "description": "ISL Discovery Engine - Automatic implementation discovery and binding generation",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
