{
  "id": "auth-express",
  "name": "Express Auth Template",
  "description": "Production-quality auth for Express with Prisma, JWT (jose), bcrypt, and Zod. Structure: src/routes/, src/controllers/, src/services/, src/validators/, src/middleware/.",
  "version": "1.0.0",
  "stack": {
    "framework": "express",
    "orm": "prisma",
    "language": "typescript",
    "validation": "zod",
    "passwordHashing": "bcrypt",
    "jwt": "jose"
  },
  "supportedFrameworks": ["express"],
  "whenToUse": {
    "triggers": [
      "User requests auth implementation",
      "Spec includes Register, Login, Logout, Refresh behaviors",
      "Project uses Express + Prisma"
    ],
    "conditions": {
      "mustHave": ["Express 4.x+", "Prisma", "PostgreSQL or SQLite"],
      "optional": ["TypeScript strict mode"]
    }
  },
  "files": [
    "prisma/schema.prisma",
    "src/index.ts",
    "src/lib/auth.ts",
    "src/lib/db.ts",
    "src/routes/auth.ts",
    "src/controllers/register.ts",
    "src/controllers/login.ts",
    "src/controllers/logout.ts",
    "src/controllers/refresh.ts",
    "src/services/auth.ts",
    "src/validators/auth.ts",
    "src/middleware/auth.ts",
    "src/middleware/error-handler.ts",
    "src/middleware/request-logger.ts",
    "src/middleware/cors.ts"
  ],
  "envRequired": ["DATABASE_URL", "JWT_SECRET"],
  "dependencies": {
    "production": ["express", "prisma", "@prisma/client", "zod", "bcrypt", "jose"],
    "dev": ["typescript", "tsx", "@types/express", "@types/bcrypt", "@types/node"]
  }
}
